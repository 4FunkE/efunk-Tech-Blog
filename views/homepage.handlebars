<!-- Loop over each object in the blogPost array -->
{{#each blogPosts as |blogPost| }}
<div class="row mb-4 blogPost">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/blogPost/{{blogPost.id}}">{{blogPost.name}}</a>
    </h2>
    <!-- show blog post -->
    <p>
      <span for="img" aria-label="post">ðŸ“¨</span>
      <span class="description">{{blogPost.description}}</span>
    </p>
    <p>Created by {{blogPost.user.name}} on {{format_date blogPost.date_created}}</p>
  </div>
</div>
{{/each}}